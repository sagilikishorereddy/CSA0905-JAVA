public class NumberPattern {
    public static void main(String[] args) {
        int n = 4;  // As per the provided pattern, we have 4 levels.

        // Printing the top half of the pattern
        for (int i = 1; i <= n; i++) {
            // Printing the leading spaces
            for (int j = 1; j <= n - i; j++) {
                System.out.print("  ");  // Using two spaces for better alignment
            }

            // Printing the numbers
            for (int j = 1; j <= i; j++) {
                System.out.print(i + " ");
            }

            System.out.println();
        }

        // Printing the bottom half of the pattern
        for (int i = n - 1; i >= 1; i--) {
            // Printing the leading spaces
            for (int j = 1; j <= n - i; j++) {
                System.out.print("  ");  // Using two spaces for better alignment
            }

            // Printing the numbers
            for (int j = 1; j <= i; j++) {
                System.out.print(i + " ");
            }

            System.out.println();
        }
    }
}
