public class NumberPattern2 {
    public static void main(String[] args) {
        int n = 5;  // You can change this to get a larger or smaller pyramid

        for (int i = n; i >= 1; i--) {
            for (int j = n; j >= n - i + 1; j--) {
                System.out.print(j + " ");
            }
            System.out.println();
        }
    }
}
